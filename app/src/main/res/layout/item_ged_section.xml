<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="0dp"
    android:layout_marginBottom="4dp">

    <!-- Header Section épuré -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/section_header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Icon simplifié -->
            <RelativeLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/folder_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_folder_windows11" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/section_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/custom_icon_bg"
                    android:src="@drawable/ic_business"
                    android:visibility="visible"
                    android:padding="2dp"
                    app:tint="?attr/colorOnSurface"
                    tools:visibility="visible" />
            </RelativeLayout>

            <!-- Title Container simplifié -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/section_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    tools:text="@string/section_title_admin" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/section_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:visibility="gone"
                    tools:text="@string/section_subtitle_preview"
                    tools:visibility="visible" />
            </LinearLayout>

            <!-- Counter Badge minimaliste -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/section_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:background="?attr/colorSecondaryContainer"
                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                android:textColor="?attr/colorOnSecondaryContainer"
                android:textStyle="bold"
                android:minWidth="24dp"
                android:gravity="center"
                tools:text="@string/section_counter_preview" />

            <!-- Chevron minimaliste -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/chevron_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_expand_more"
                app:tint="?attr/colorOnSurfaceVariant"
                android:rotation="0"
                android:scaleType="center"
                android:alpha="0.7" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Content Section optimisé -->
    <LinearLayout
        android:id="@+id/section_content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_marginTop="4dp">

        <!-- Content Card sans élévation excessive -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Breadcrumb simplifié -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="8dp"
                    android:gravity="center_vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_navigation"
                        android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginEnd="8dp"
                        android:textAllCaps="true"
                        android:letterSpacing="0.1" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="?attr/colorOutlineVariant"
                        android:layout_marginEnd="8dp" />

                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/breadcrumb_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:singleLine="true"
                            app:chipSpacing="2dp" />
                    </HorizontalScrollView>
                </LinearLayout>

                <!-- Quick Actions redesignées -->
                <LinearLayout
                    android:id="@+id/quick_actions_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="6dp"
                    android:paddingBottom="12dp"
                    android:gravity="center">

                    <!-- Scan Action -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_scan_document"
                        style="@style/Widget.Material3.Button.TextButton.Icon"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:text="@string/action_scan"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                        android:textColor="?attr/colorOnSurface"
                        app:icon="@drawable/ic_scan"
                        app:iconGravity="start"
                        app:iconPadding="4dp"
                        app:iconSize="16dp"
                        app:iconTint="?attr/colorPrimary"
                        android:backgroundTint="?attr/colorSurface"
                        app:cornerRadius="20dp" />

                    <!-- Create Folder Action -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_create_folder"
                        style="@style/Widget.Material3.Button.TextButton.Icon"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="4dp"
                        android:text="@string/action_create_folder"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                        android:textColor="?attr/colorOnSurface"
                        app:icon="@drawable/ic_folder_add"
                        app:iconGravity="start"
                        app:iconPadding="4dp"
                        app:iconSize="16dp"
                        app:iconTint="?attr/colorPrimary"
                        android:backgroundTint="?attr/colorSurface"
                        app:cornerRadius="20dp" />

                    <!-- Upload File Action -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_upload_file"
                        style="@style/Widget.Material3.Button.TextButton.Icon"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:text="@string/action_upload_file"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                        android:textColor="?attr/colorOnSurface"
                        app:icon="@drawable/ic_upload"
                        app:iconGravity="start"
                        app:iconPadding="4dp"
                        app:iconSize="16dp"
                        app:iconTint="?attr/colorPrimary"
                        android:backgroundTint="?attr/colorSurface"
                        app:cornerRadius="20dp" />
                </LinearLayout>

                <!-- Séparateur subtil -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="?attr/colorOutlineVariant"
                    android:alpha="0.5" />

                <!-- RecyclerView optimisé -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/items_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="4dp"
                    android:scrollbars="none"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never" />

                <!-- Empty State épuré -->
                <LinearLayout
                    android:id="@+id/empty_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="32dp"
                    android:visibility="gone"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:src="@drawable/ic_folder_open"
                        app:tint="?attr/colorOnSurfaceVariant"
                        android:alpha="0.5" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/empty_state_title"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="sans-serif-medium" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/empty_state_subtitle"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Séparateur subtil -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="?attr/colorOutlineVariant"
                    android:alpha="0.5" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</LinearLayout>