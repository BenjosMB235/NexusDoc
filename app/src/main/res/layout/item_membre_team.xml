<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginHorizontal="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardElevation="0dp"
    app:cardBackgroundColor="?attr/colorSurfaceContainer"
    app:cardCornerRadius="16dp"
    app:strokeColor="?attr/colorOutlineVariant"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Avatar du membre -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_avatar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/profile_picture_content_description"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.LargeComponent"
            app:strokeColor="?attr/colorOutlineVariant"
            app:strokeWidth="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_person" />

        <!-- Indicateur de statut -->
        <View
            android:id="@+id/status_indicator"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@drawable/shape_status_indicator"
            android:backgroundTint="@color/status_online"
            app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
            app:layout_constraintEnd_toEndOf="@id/iv_avatar"
            app:elevation="2dp" />

        <!-- Nom du membre -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:text="@string/member_name_placeholder"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="?attr/colorOnSurface"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/iv_avatar"
            app:layout_constraintTop_toTopOf="@id/iv_avatar"
            app:layout_constraintEnd_toStartOf="@id/btn_menu" />

        <!-- Rôle/Position -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_role"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"
            android:text="@string/member_role_placeholder"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/iv_avatar"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            app:layout_constraintEnd_toStartOf="@id/btn_menu" />

        <!-- Dernière activité -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_last_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"
            android:text="@string/member_last_active_placeholder"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/iv_avatar"
            app:layout_constraintTop_toBottomOf="@id/tv_role"
            app:layout_constraintEnd_toStartOf="@id/btn_menu" />

        <!-- Bouton menu -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_menu"
            style="@style/Widget.Material3.IconButton.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/more_options_content_description"
            app:icon="@drawable/ic_more_vert"
            app:iconTint="?attr/colorOnSurfaceVariant"
            app:iconSize="20dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_name" />

        <!-- Badges/Chips pour les compétences ou statuts -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/layout_badges"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            app:chipSpacing="4dp"
            app:singleLine="true"
            app:layout_constraintStart_toEndOf="@id/iv_avatar"
            app:layout_constraintTop_toBottomOf="@id/tv_last_activity"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="visible">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_manager"
                style="@style/Widget.Material3.Chip.Assist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chip_manager_label"
                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                app:chipBackgroundColor="?attr/colorTertiaryContainer"
                app:chipStrokeWidth="0dp"
                android:visibility="gone"
                tools:visibility="visible" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_admin"
                style="@style/Widget.Material3.Chip.Assist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chip_admin_label"
                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                app:chipBackgroundColor="?attr/colorErrorContainer"
                app:chipStrokeWidth="0dp"
                android:visibility="gone"
                tools:visibility="visible" />
        </com.google.android.material.chip.ChipGroup>

        <!-- Actions rapides -->
        <LinearLayout
            android:id="@+id/layout_actions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            app:layout_constraintTop_toBottomOf="@id/layout_badges"
            tools:visibility="visible">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_message"
                style="@style/Widget.Material3.Button.Filled"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/button_message"
                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                app:icon="@drawable/ic_contact"
                app:iconSize="16dp"
                app:iconPadding="4dp"
                app:cornerRadius="18dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_call"
                style="@style/Widget.Material3.Button.Filled"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="@string/button_call"
                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                app:icon="@drawable/ic_phone"
                app:iconSize="16dp"
                app:iconPadding="4dp"
                app:cornerRadius="18dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>