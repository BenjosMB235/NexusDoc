<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_container"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:gravity="center_vertical">

        <!-- Document Icon Container -->
        <RelativeLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/document_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_description"
                app:tint="?attr/colorOnPrimaryContainer" />
        </RelativeLayout>

        <!-- Document Info Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <!-- Document Name et Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="2dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/document_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="@string/preview_document_name" />

                <!-- Status Indicators -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="8dp"
                    android:gravity="center_vertical">

                    <!-- OCR Indicator -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ocr_indicator"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/ic_text_recognition"
                        app:tint="?attr/colorPrimary"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <!-- Sync Status -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/sync_status"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_cloud_done"
                        app:tint="?attr/colorPrimary"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <!-- Document Metadata -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Date du document avec largeur flexible -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/document_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="@string/preview_document_date" />

                <!-- Séparateur entre date et taille -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:layout_marginHorizontal="6dp"
                    android:background="?attr/colorOutlineVariant" />

                <!-- Taille du document -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/document_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="12sp"
                    android:minWidth="40dp"
                    android:gravity="center"
                    tools:text="@string/preview_document_size" />

                <!-- Document Type Chip avec taille optimisée -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/document_type"
                    style="@style/Widget.Material3.Chip.Assist"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="6dp"
                    android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    app:chipBackgroundColor="?attr/colorSecondaryContainer"
                    app:chipMinHeight="20dp"
                    app:chipCornerRadius="10dp"
                    app:chipStartPadding="6dp"
                    app:chipEndPadding="6dp"
                    app:textStartPadding="0dp"
                    app:textEndPadding="0dp"
                    tools:text="@string/preview_document_type" />
            </LinearLayout>

            <!-- Progress Indicator -->
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progress_indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:visibility="gone"
                app:trackColor="?attr/colorSurfaceContainerHighest"
                app:indicatorColor="?attr/colorPrimary"
                tools:visibility="visible"
                tools:progress="65" />
        </LinearLayout>

        <!-- Favorite Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/favorite_icon"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            app:icon="@drawable/ic_favorite_border"
            app:iconTint="?attr/colorOnSurfaceVariant"
            app:iconSize="18dp" />
    </LinearLayout>

    <!-- Selection Overlay -->
    <View
        android:id="@+id/selection_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimaryContainer"
        android:alpha="0.2"
        android:visibility="gone" />

    <!-- Selection Indicator -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/selection_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="top|end"
        android:layout_margin="8dp"
        android:visibility="gone"
        android:src="@drawable/ic_check_circle"
        app:tint="?attr/colorPrimary" />
</com.google.android.material.card.MaterialCardView>