<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurfaceVariant">

    <!-- AppBar avec profil header -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.Material3.Dark">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:titleEnabled="false">

            <!-- Background avec gradient -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/profile_header_gradient"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp"
                app:layout_collapseMode="parallax">

                <!-- Avatar de profil -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/profile_avatar_container"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                    app:cardElevation="8dp"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/profile_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_profile_placeholder"
                        android:scaleType="centerCrop" />

                </com.google.android.material.card.MaterialCardView>

                <!-- Nom complet -->
                <TextView
                    android:id="@+id/tv_full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nom d'utilisateur"
                    android:textColor="?attr/colorOnPrimary"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- Status ou rÃ´le -->
                <TextView
                    android:id="@+id/tv_user_fonction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fonction"
                    android:textColor="?attr/colorOnPrimary"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:alpha="0.9" />

                <!-- Email -->
                <TextView
                    android:id="@+id/tv_user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="email@example.com"
                    android:textColor="?attr/colorOnPrimary"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:alpha="0.8"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Toolbar -->
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:title="Profil"
                app:titleTextColor="?attr/colorOnPrimary" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenu principal -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Section Informations personnelles -->
            <com.google.android.material.card.MaterialCardView
                style="@style/CardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Informations personnelles"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"
                        android:drawableStart="@drawable/ic_person"
                        android:drawablePadding="12dp"
                        android:drawableTint="?attr/colorPrimary"
                        android:gravity="center_vertical" />

                    <!-- Username -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nom d'utilisateur"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                            android:textAllCaps="true"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="username"
                            android:textColor="?attr/colorOnSurface"
                            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="12dp" />

                    </LinearLayout>

                    <!-- Fonction -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fonction"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                            android:textAllCaps="true"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_fonction"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Fonction"
                            android:textColor="?attr/colorOnSurface"
                            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="12dp" />

                    </LinearLayout>

                    <!-- Email -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Adresse e-mail"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                            android:textAllCaps="true"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="email@example.com"
                            android:textColor="?attr/colorOnSurface"
                            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="12dp"
                            android:drawableStart="@drawable/ic_email"
                            android:drawablePadding="8dp"
                            android:drawableTint="?attr/colorPrimary"
                            android:gravity="center_vertical" />

                    </LinearLayout>

                    <!-- TÃ©lÃ©phone -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NumÃ©ro de tÃ©lÃ©phone"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                            android:textAllCaps="true"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_telephone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="+235 00 00 00 00"
                            android:textColor="?attr/colorOnSurface"
                            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="12dp"
                            android:drawableStart="@drawable/ic_phone"
                            android:drawablePadding="8dp"
                            android:drawableTint="?attr/colorPrimary"
                            android:gravity="center_vertical" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Section Actions -->
            <com.google.android.material.card.MaterialCardView
                style="@style/CardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Actions"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"
                        android:drawableStart="@drawable/ic_settings"
                        android:drawablePadding="12dp"
                        android:drawableTint="?attr/colorPrimary"
                        android:gravity="center_vertical" />

                    <!-- Bouton Modifier le profil -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_modifier_profil"
                        style="@style/Widget.Material3.Button.Filled"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Modifier le profil"
                        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                        app:icon="@drawable/ic_edit"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        android:layout_marginBottom="12dp" />

                    <!-- Bouton Changer le mot de passe -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_changer_mot_de_passe"
                        style="@style/Widget.Material3.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Changer le mot de passe"
                        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                        app:icon="@drawable/ic_lock"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        android:layout_marginBottom="12dp" />

                    <!-- Bouton DÃ©connexion -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_logout"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Se dÃ©connecter"
                        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                        android:textColor="?attr/colorError"
                        app:icon="@drawable/ic_deconnexion"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:iconTint="?attr/colorError" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- FAB pour Ã©dition rapide -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_anchor="@id/app_bar"
        app:layout_anchorGravity="bottom|end"
        app:srcCompat="@drawable/ic_edit"
        app:backgroundTint="?attr/colorPrimaryContainer"
        app:tint="?attr/colorOnPrimaryContainer" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>