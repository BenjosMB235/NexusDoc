<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_container"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:gravity="center_vertical">

        <!-- Folder Icon Container -->
        <RelativeLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/folder_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_folder_clipart" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/folder_custom_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/custom_icon_bg"
                android:src="@drawable/ic_business"
                android:visibility="gone"
                android:padding="2dp"
                app:tint="?attr/colorOnSurface"
                tools:visibility="visible" />
        </RelativeLayout>

        <!-- Folder Info Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <!-- Header: Nom + Status Indicators -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="2dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/folder_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    tools:text="@string/preview_folder_name_example" />

                <!-- Status Indicators -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="8dp"
                    android:gravity="center_vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/shared_indicator"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="6dp"
                        android:src="@drawable/ic_share"
                        app:tint="?attr/colorSecondary"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/sync_status"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_cloud_done"
                        app:tint="?attr/colorPrimary"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <!-- Statistics et Path sur une ligne -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Statistics Container -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Documents Count -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginEnd="3dp"
                            android:src="@drawable/ic_description"
                            app:tint="?attr/colorPrimary" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/folder_document_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="12sp"
                            tools:text="@string/preview_docs_count_example" />
                    </LinearLayout>

                    <!-- Separator -->
                    <View
                        android:id="@+id/separator_dot"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="8dp"
                        android:background="@drawable/modern_dot_bg"
                        android:backgroundTint="?attr/colorOutline"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <!-- Subfolders Count -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:visibility="visible"
                        tools:visibility="visible">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginEnd="3dp"
                            android:src="@drawable/ic_folder_open"
                            app:tint="?attr/colorSecondary" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/folder_subfolder_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="12sp"
                            tools:text="@string/preview_subfolder_count_example" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Path (plus compact) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:visibility="visible"
                    tools:visibility="visible">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/ic_location"
                        app:tint="?attr/colorOutline" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/folder_path"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="80dp"
                        android:ellipsize="start"
                        android:maxLines="1"
                        android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                        android:textColor="?attr/colorOutline"
                        android:textSize="10sp"
                        tools:text="@string/preview_folder_path_example" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Menu Button -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_more"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_more_vert"
            app:tint="?attr/colorOnSurfaceVariant"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="4dp" />
    </LinearLayout>

    <!-- Selection Overlay -->
    <View
        android:id="@+id/selection_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selection_gradient_overlay"
        android:visibility="gone" />

    <!-- Selection Indicator -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/selection_icon_container"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="top|end"
        android:layout_margin="8dp"
        android:visibility="gone"
        app:cardBackgroundColor="?attr/colorPrimary"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/selection_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_check"
            app:tint="?attr/colorOnPrimary" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Shimmer Effect -->
    <View
        android:id="@+id/shimmer_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shimmer_gradient"
        android:visibility="gone" />
</com.google.android.material.card.MaterialCardView>