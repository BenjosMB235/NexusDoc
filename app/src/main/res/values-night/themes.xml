<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.NexusDoc" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorPrimaryContainer">@color/primary_container</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorSecondaryContainer">@color/secondary_container</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="android:navigationBarColor">?attr/colorSurface</item>

        <!-- Other -->
        <item name="colorOutline">@color/outline</item>
        <item name="cardViewStyle">@style/CardView.AirFrance</item>

        <item name="colorInfo">#90CAF9</item>
        <item name="colorInfoContainer">#1E88E5</item>

        <item name="colorScrim">#B3000000</item>

        <!-- Pour le menu overflow -->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>

        <item name="android:fontFamily">@font/roboto_condensed</item>

    </style>

    <style name="OverflowMenuStyle" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">?attr/colorSurfaceContainer</item>
    </style>

    <style name="Theme.NexusDoc.NoActionBar" parent="Theme.NexusDoc">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="android:navigationBarColor">?attr/colorSurface</item>

        <item name="android:fontFamily">@font/roboto_condensed</item>
    </style>
</resources>