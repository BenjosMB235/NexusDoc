<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyBottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <!-- Couleur de fond -->
        <item name="android:background">@color/colorBackground</item>

        <!-- Hauteur personnalisée -->
        <item name="android:layout_height">72dp</item>

        <!-- Gestion des icônes et textes -->
        <item name="itemIconTint">@drawable/ic_nav_item_selector</item>
        <item name="itemTextColor">@drawable/text_nav_item_selector</item>

        <!-- Visibilité des labels -->
        <item name="labelVisibilityMode">labeled</item>

        <!-- Taille des icônes -->
        <item name="itemIconSize">28dp</item>

        <!-- Style du texte -->
        <item name="itemTextAppearanceActive">@style/MyBottomNavigationTextActive</item>
        <item name="itemTextAppearanceInactive">@style/MyBottomNavigationTextInactive</item>

        <!-- Animation des icônes -->
        <item name="itemRippleColor">@color/colorPrimary</item>
        <item name="itemPaddingTop">8dp</item>
        <item name="itemPaddingBottom">8dp</item>
    </style>

    <style name="MyBottomNavigationTextActive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_condensed</item>
    </style>

    <style name="MyBottomNavigationTextInactive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/roboto_condensed</item>
    </style>

    <!-- Style du NavigationView -->
    <style name="MyNavigationViewStyle" parent="Widget.MaterialComponents.NavigationView">
        <!-- Couleur de fond -->
        <item name="android:background">@color/colorBackground</item>

        <!-- Couleur des items -->
        <item name="itemIconTint">@drawable/nav_item_icon_selector</item>
        <item name="itemTextColor">@drawable/nav_item_text_selector</item>

        <!-- Style du texte -->
        <item name="itemTextAppearance">@style/MyNavigationItemTextAppearance</item>

        <!-- Ripple effect -->
        <item name="itemRippleColor">@color/colorPrimary</item>

        <!-- Espacement -->
        <item name="itemHorizontalPadding">24dp</item>
        <item name="itemVerticalPadding">12dp</item>

        <!-- Séparateurs -->
        <!-- Dans votre style MyNavigationViewStyle -->
        <item name="android:divider">@drawable/nav_divider</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="dividerInsetStart">16dp</item>
        <item name="dividerInsetEnd">0dp</item>
    </style>

    <style name="MyNavigationItemTextAppearance" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_condensed</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary_color</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- Custom Switch Style -->
    <style name="CustomSwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="colorControlActivated">@color/switch_track_on</item>
        <item name="colorSwitchThumbNormal">@color/switch_thumb</item>
        <item name="android:colorForeground">@color/switch_track_off</item>
    </style>

    <!-- Card Style -->
    <style name="CardStyle">
        <item name="android:background">@drawable/card_background</item>
        <item name="android:elevation">2dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Section Header Style -->
    <style name="SectionHeaderStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Setting Item Style -->
    <style name="SettingItemStyle">
        <item name="android:padding">16dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Setting Title Style -->
    <style name="SettingTitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Setting Description Style -->
    <style name="SettingDescriptionStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- FAQ Item Style -->
    <style name="FAQItemStyle">
        <item name="android:background">@drawable/faq_item_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- FAQ Question Style -->
    <style name="FAQQuestionStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <!-- FAQ Answer Style -->
    <style name="FAQAnswerStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Styles de base Material Design 3 -->
    <style name="AppTheme" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorSurfaceContainer">@color/md_theme_light_surfaceContainer</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOutlineVariant">@color/md_theme_light_outlineVariant</item>

        <!-- Pour le menu overflow (3 points) -->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
        <!-- Pour les items du menu -->
        <item name="android:itemBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:fontFamily">@font/roboto_condensed</item>
    </style>

    <style name="OverflowMenuStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/colorBackground</item>
    </style>

    <!-- Styles pour les avatars -->
    <style name="ShapeAppearanceOverlay.Material3.Corner.Full" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.Material3.Button.Filled" parent="Widget.Material3.Button">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="rippleColor">?attr/colorOnPrimary</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Widget.Material3.Button.Outlined" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/btn_outlined_background</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="rippleColor">?attr/colorPrimary</item>
        <item name="strokeColor">?attr/colorOutline</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Widget.Material3.Button.Filled.Tonal" parent="Widget.Material3.Button">
        <item name="backgroundTint">?attr/colorSecondaryContainer</item>
        <item name="android:textColor">?attr/colorOnSecondaryContainer</item>
        <item name="rippleColor">?attr/colorOnSecondaryContainer</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Styles pour les cartes de messages -->
    <style name="MessageCard">
        <item name="cardBackgroundColor">?attr/colorSurfaceVariant</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="MessageCard.Sent">
        <item name="cardBackgroundColor">?attr/colorPrimaryContainer</item>
    </style>

    <style name="MessageCard.Received">
        <item name="cardBackgroundColor">?attr/colorSurfaceVariant</item>
    </style>

    <!-- Styles pour les images -->
    <style name="CircularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- Style pour les cartes -->
    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <!-- Style pour les dialogues personnalisés -->
    <style name="CustomAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/CustomAlertDialog.Title</item>
        <item name="materialAlertDialogBodyTextStyle">@style/CustomAlertDialog.Body</item>
        <item name="buttonBarPositiveButtonStyle">@style/CustomAlertDialog.PositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/CustomAlertDialog.NegativeButton</item>
    </style>

    <style name="CustomAlertDialog.Title" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomAlertDialog.Body" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="CustomAlertDialog.PositiveButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomAlertDialog.NegativeButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_secondary</item>
    </style>


</resources>